<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.team4u</groupId>
    <artifactId>team4u-kit</artifactId>
    <version>2.4.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <modules>
        <module>team4u-base</module>
        <module>team4u-ddd</module>
        <module>team4u-template</module>
        <module>team4u-kv</module>
        <module>team4u-sentinel-cache</module>
        <module>team4u-selector</module>
        <module>team4u-command</module>
        <module>team4u-notification</module>
        <module>team4u-workflow</module>
        <module>team4u-config</module>
        <module>team4u-test</module>
        <module>team4u-rate-limiter</module>
        <module>team4u-exporter</module>
        <module>team4u-sql</module>
    </modules>

    <properties>
        <mybatis-plus.version>3.4.3.1</mybatis-plus.version>
        <hutool.version>5.7.3</hutool.version>
        <spring-data-jpa.version>2.5.2</spring-data-jpa.version>
        <spring.version>5.3.8</spring.version>
        <beetl.version>3.3.2.RELEASE</beetl.version>
        <jetbrick.version>2.1.10</jetbrick.version>
        <fastjson.version>1.2.76</fastjson.version>
        <byte-buddy.version>1.11.5</byte-buddy.version>
        <camel.version>3.9.0</camel.version>
        <testable.version>0.6.4</testable.version>
        <smart-http-server.version>1.1.4</smart-http-server.version>
        <liteflow.version>2.5.7</liteflow.version>
        <org.mapstruct.version>1.4.2.Final</org.mapstruct.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>cn.hutool</groupId>
            <artifactId>hutool-all</artifactId>
            <version>${hutool.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>
                        -javaagent:${settings.localRepository}/com/alibaba/testable/testable-agent/${testable.version}/testable-agent-${testable.version}.jar
                    </argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>aliyun</id>
            <url>http://maven.aliyun.com/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>vip-repo</id>
            <url>http://mvn1.tools.vipshop.com/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>vip-repo</id>
            <url>http://mvn1.tools.vipshop.com/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>
