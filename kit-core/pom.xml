        <!--For ValidatorUtil-->
        <dependency>
            <groupId>net.sf.oval</groupId>
            <artifactId>oval</artifactId>
            <version>1.87</version>
            <optional>true</optional>
        </dependency>

        <!--For JsonConfigLoader-->
        <dependency>
            <groupId>com.jsoniter</groupId>
            <artifactId>jsoniter</artifactId>
            <version>0.9.15</version>
            <optional>true</optional>
